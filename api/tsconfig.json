{
    "extends": "fastify-tsconfig",
    "compilerOptions": {
      "sourceMap": true,
      "outDir": "./dist",
      "noImplicitAny": true,
      "strictNullChecks": true,
      "strictFunctionTypes": true,
      "noImplicitThis": true,
      "noImplicitReturns": false,
      "noUnusedParameters": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true
    },
    "exclude": [
      "node_modules"
    ],
    "include": [
      "./src/**/*.ts"
    ]
  }